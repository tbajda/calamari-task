{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@services": ["services"],
      "@components": ["components"],
      "@assets": ["assets"],
      "@modules": ["modules"],
      "@hooks": ["hooks"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "jest.setup.js"]
}
